# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Environment: staging
ENVIRONMENT=staging

# Debug mode: false for staging
DEBUG=false

# Log level: INFO for staging (use DEBUG for troubleshooting)
LOG_LEVEL=INFO

# Application name (for logging and monitoring)
APP_NAME=ERNI Building Agents

# Application version
APP_VERSION=1.0.0-staging

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Backend host and port
HOST=0.0.0.0
PORT=8000

# Number of worker processes (adjust based on staging server resources)
WORKERS=2

# Request timeout in seconds
TIMEOUT=120

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
# REQUIRED: Generate a new secret key for staging
# Generate with: openssl rand -hex 32
SECRET_KEY=REPLACE-WITH-YOUR-STAGING-SECRET-KEY-MINIMUM-32-CHARS

# REQUIRED: Update with your actual staging domain
# Example: https://staging.erni-gruppe.ch,https://staging-api.erni-gruppe.ch
CORS_ORIGINS=https://staging.erni-gruppe.ch

# CORS allow credentials
CORS_ALLOW_CREDENTIALS=true

# Allowed hosts (comma-separated list of staging domains)
ALLOWED_HOSTS=staging.erni-gruppe.ch,staging-api.erni-gruppe.ch

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
# Maximum requests per minute per IP (10 for staging testing)
RATE_LIMIT_PER_MINUTE=10

# Maximum requests per hour per IP
RATE_LIMIT_PER_HOUR=600

# ----------------------------------------------------------------------------
# In-Memory Storage Configuration
# ----------------------------------------------------------------------------
# Maximum number of conversations to store in memory
MAX_CONVERSATIONS=1000

# Time-to-live for conversations in seconds (1 hour)
CONVERSATION_TTL_SECONDS=3600

# ----------------------------------------------------------------------------
# Monitoring and Logging
# ----------------------------------------------------------------------------
# Enable detailed request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance metrics
ENABLE_METRICS=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

